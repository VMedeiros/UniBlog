@model UniBlog.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="UsuarioID" class="control-label"></label>
                <select asp-for="UsuarioID" class="form-control" asp-items="ViewBag.UsuarioID"></select>
                <span asp-validation-for="UsuarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaID" class="control-label"></label>
                <select asp-for="AreaID" class="form-control" asp-items="ViewBag.AreaID"></select>
                <span asp-validation-for="AreaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComentarioID" class="control-label"></label>
                <input asp-for="ComentarioID" class="form-control" />
                <span asp-validation-for="ComentarioID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
